# ============================================================================
# Django Environment Configuration Template
# ============================================================================
# Copy this file to .env and fill in the actual values for your environment
# NEVER commit .env to version control - it contains sensitive credentials

# ============================================================================
# Django Core Settings
# ============================================================================

# SECURITY WARNING: Generate a new secret key for production!
# You can generate one using: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
DJANGO_SECRET_KEY=your-super-secret-key-here-change-this-in-production

# Set to False in production
DJANGO_DEBUG=False

# Comma-separated list of allowed hosts (e.g., your-domain.com,www.your-domain.com)
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# ============================================================================
# Database Configuration (PostgreSQL)
# ============================================================================

# Production PostgreSQL database credentials
DB_NAME=webapp
DB_USER=your_db_user
DB_PASSWORD=your_db_password_here
DB_HOST=localhost
DB_PORT=5432

# Example for cloud providers:
# Heroku: Use DATABASE_URL instead (automatically configured)
# AWS RDS: DB_HOST=your-rds-instance.xyz.us-east-1.rds.amazonaws.com
# DigitalOcean: DB_HOST=your-database-cluster-do-user-12345.db.ondigitalocean.com

# ============================================================================
# CORS Configuration
# ============================================================================

# Comma-separated list of allowed frontend origins for production
# Example: https://your-frontend.netlify.app,https://www.your-domain.com
CORS_ALLOWED_ORIGINS=

# ============================================================================
# Security Settings (Production)
# ============================================================================

# Force HTTPS redirect (set to False if your deployment platform handles SSL)
SECURE_SSL_REDIRECT=True

# ============================================================================
# Email Configuration (Optional - for future password reset feature)
# ============================================================================

# Email backend (use SMTP for production)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-specific-password
# DEFAULT_FROM_EMAIL=noreply@your-domain.com

# ============================================================================
# Static Files (Optional - if using cloud storage)
# ============================================================================

# AWS S3 Configuration (uncomment if using S3 for static files)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1
# AWS_S3_CUSTOM_DOMAIN=your-bucket-name.s3.amazonaws.com

# ============================================================================
# Deployment Platform Specific
# ============================================================================

# Heroku automatically sets these:
# - DATABASE_URL (replaces DB_* variables)
# - PORT
# - DYNO (dyno identifier)

# DigitalOcean App Platform automatically sets:
# - APP_URL
# - DATABASE_URL

# ============================================================================
# Development Settings (Local Only)
# ============================================================================

# For local development, you can use these simplified settings:
# DJANGO_DEBUG=True
# DJANGO_SECRET_KEY=django-insecure-local-dev-key-not-for-production
# DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1
# DB_NAME=webapp
# DB_USER=user
# DB_PASSWORD=password
# DB_HOST=localhost
# DB_PORT=5432
